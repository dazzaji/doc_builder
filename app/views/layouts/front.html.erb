<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<header>
	<title><p id="title"><%= title %></p></title>
	<nav><%= render(:partial => "/shared/menu_front") %></nav>
</header>

<% if !flash[:notice].blank? %>
	<div><%= flash[:notice] %></div>
<% end %>

<%= yield %>

<footer>
	<%= render(:partial =>"/shared/footer") %>
</footer>

</body>
</html>