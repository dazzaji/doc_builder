<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag "reset", :media => "all" %>
  <%= stylesheet_link_tag "defaults", :media => "all" %>
  <%= stylesheet_link_tag "stylesheet", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<header>
	<title><%= image_tag("banner.png", :class => "logo", :alt => "#{title}") %></title>
	<nav><%= render(:partial => "/shared/menu") %></nav>
</header>

<% if !flash[:notice].blank? %>
	<div><%= flash[:notice] %></div>
<% end %>

<%= yield %>

<footer>
	<%= render(:partial =>"/shared/footer") %>
</footer>

</body>
</html>