<% @title = "Categories" %>
<h1>Listing categories</h1>

<table>
  <tr>
    <th>Category</th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.category, category %></td>
    <td><%= button_to 'Delete', category, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Category', new_category_path %>
