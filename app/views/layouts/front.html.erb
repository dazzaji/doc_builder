<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag "reset", :media => "all" %>
  <%= stylesheet_link_tag "defaults", :media => "all" %>
  <%= stylesheet_link_tag "style", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<header>
	<%= image_tag "banner.png", :class => "logo", :alt => "#{title}", :size => "140X50" %>
	<nav><%= render(:partial => "/shared/menu_front") %></nav>
</header>

<% if !flash[:notice].blank? %>
	<div><%= flash[:notice] %></div>
<% end %>

<%= yield %>

<footer>
	<%= render(:partial =>"/shared/footer") %>
</footer>

</body>
</html>