<h1>Subcategories:</h1>

<table>
  <tr>
    <th>Subcategory</th>
    <th>Category of:</th>
	<th>Articles:</th>
    <th></th>
  </tr>

<% @subcategories.each do |subcategory| %>
  <tr>
    <td><%= link_to subcategory.subcategory, subcategory, :action => :show %></td>
	<td><%= link_to subcategory.category.category, subcategory.category, :action => :show %></td>
	<td>
		<% subcategory.articles.each do |t| %>
		<%= link_to t.article, t, :action => :show %>
		<% end %>
	</td>
    <td><%= button_to 'Delete', subcategory, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Subcategory', new_subcategory_path %>
